{% extends 'base.html.twig' %}
{% block title %}Invoices listing{% endblock %}
{% block body %}
    <h1>Invoice {{ invoice.reference | escape }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>{{ invoice.date | date }}</th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Recipient</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Label</th>
                <th>Price (tax excluded)</th>
                <th>Tax</th>
                <th>Price (tax included)</th>
            </tr>
        </thead>
        <tbody>
            {% for row in invoice.rows %}
            <tr>
                <td>{{ row.label }}</td>
                <td>{{ row.priceTaxExcluded | number_format(2) }} €</td>
                <td>{{ row.tax | number_format(2) }} €</td>
                <td>{{ row.priceTaxIncluded | number_format(2) }} €</td>
            </tr>
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td>Total Tax Excluded</td>
                <td>€</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>Total Tax included</td>
                <td>€</td>
            </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('invoice_listing') }}">Back to invoice listing</a>
    </p>
{% endblock %}